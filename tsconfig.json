{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    // "incremental": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // "tsBuildInfoFile": ".tsbuildinfo",
    "allowJs": true,
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}
